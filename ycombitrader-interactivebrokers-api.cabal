        io-streams                 >= 1.0 && < 1.2,
        vector                     >= 0.10 && < 0.12,
        blaze-builder              >= 0.3 && < 0.5,
        time                       >= 1.2 && < 1.5,
        network                    >= 2.4 && < 2.6,
        fast-logger                >= 0.3 && < 0.5,
        text                       >= 0.11 && < 0.13,
        cereal                     >= 0.3.5 && < 0.4,
        random                     >= 1.0 && < 1.2


executable account_info
    default-language: Haskell2010
    main-is: account_info.hs
    hs-source-dirs: examples
    ghc-options: -Wall -rtsopts
    -- other-modules:       
    build-depends:
        base                       >= 4   && < 5,
        transformers               >= 0.2 && < 0.4,
        MonadCatchIO-transformers  >= 0.2 && < 0.4,
        stm                        >= 2.4 && < 2.6,
        template-haskell           >= 2.7 && < 3,
        bytestring                 >= 0.9 && < 0.11,
        io-streams                 >= 1.0 && < 1.2,
