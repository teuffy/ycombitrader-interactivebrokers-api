        blaze-builder              >= 0.3 && < 0.5,
        time                       >= 1.2 && < 1.5,
        network                    >= 2.4 && < 2.6,
        fast-logger                >= 0.3 && < 0.5,
        text                       >= 0.11 && < 0.13,
        cereal                     >= 0.3.5 && < 0.4,
        random                     >= 1.0 && < 1.2,
        async,
        cmdargs


test-suite tests
    default-language: Haskell2010
    type: exitcode-stdio-1.0
    main-is: Main.hs
    hs-source-dirs: tests
    ghc-options: -Wall -rtsopts
    build-depends:
        base                       >= 4   && < 5,
        transformers               >= 0.2 && < 0.4,
        MonadCatchIO-transformers  >= 0.2 && < 0.4,
        stm                        >= 2.4 && < 2.6,
        template-haskell           >= 2.7 && < 3,
        bytestring                 >= 0.9 && < 0.11,
        io-streams                 >= 1.0 && < 1.2,
        vector                     >= 0.10 && < 0.12,
        blaze-builder              >= 0.3 && < 0.5,
        time                       >= 1.2 && < 1.5,
        network                    >= 2.4 && < 2.6,
        fast-logger                >= 0.3 && < 0.5,
        text                       >= 0.11 && < 0.13,
        cereal                     >= 0.3.5 && < 0.4,
        random                     >= 1.0 && < 1.2,
        QuickCheck                 >= 2.4,
        test-framework             >= 0.4,
        test-framework-quickcheck2 >= 0.2,
        ycombitrader-interactivebrokers-api


benchmark benchmarks
    type:              exitcode-stdio-1.0
    main-is:           Benchmark.hs
    hs-source-dirs:    benchmarks
    build-depends:     base >= 4 && < 5,
                       criterion,
                       ycombitrader-interactivebrokers-api
